<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sellers.VendedorLoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imagem_vendedor"
        android:scaleType="centerCrop"
        android:src="@drawable/sellerlogin"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo_vendedor"
        android:text="FormulÃ¡rio de login do vendedor"
        android:gravity="center"
        android:layout_below="@+id/imagem_vendedor"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_light"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendedor_login_email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/titulo_vendedor"
        android:hint="Nome..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendedor_login_senha"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/vendedor_login_email"
        android:hint="Senha..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/vendedor_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendedor_login_senha"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Entrar"
        android:textAllCaps="false"
        android:textSize="18dp" />




</RelativeLayout>